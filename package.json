{
  "name": "n7i.dev",
  "version": "0.1.0-alpha",
  "scripts": {
    "clean": "del dist",
    "build": "run-s build:pug build:tailwindcss build:minify",
    "build:pug": "pug ./pages --out ./dist",
    "build:tailwindcss": "tailwindcss --input ./styles/main.css --output ./dist/main.css",
    "build:minify": "esbuild ./dist/main.css --bundle --minify --allow-overwrite --outfile=./dist/main.css",
    "dev": "run-p dev:serve dev:watch",
    "dev:serve": "esbuild --servedir=dist --serve=3000",
    "dev:watch": "chokidar ./pages/**/* ./components/**/* ./styles/**/* -c 'pnpm build'"
  },
  "author": "Nanai Jua <me@n7i.dev>",
  "license": "MIT",
  "dependencies": {
    "tailwindcss": "^3.0.24"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "del-cli": "^4.0.1",
    "esbuild": "^0.14.42",
    "npm-run-all": "^4.1.5",
    "pug-cli": "1.0.0-alpha6"
  }
}
