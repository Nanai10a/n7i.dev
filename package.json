{
  "name": "n7i.dev",
  "version": "0.2.1",
  "scripts": {
    "clean": "del dist",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint .github/workflows/*.yml mixins/**/*.pug pages/**/*.pug *.{js,json,yml}",
    "lint:prettier": "prettier -c .github/workflows/*.yml mixins/**/*.pug pages/**/*.pug styles/**/*.css *.{js,json,yml,md}",
    "build": "run-s build:*",
    "build:pug": "pug ./pages --out ./dist",
    "build:tailwindcss": "tailwindcss --input ./styles/main.css --output ./dist/main.css",
    "build:minify": "esbuild ./dist/main.css --bundle --minify --allow-overwrite --outfile=./dist/main.css",
    "dev": "run-p dev:serve dev:watch",
    "dev:serve": "esbuild --servedir=dist --serve=3000",
    "dev:watch": "chokidar ./pages/**/* ./mixins/**/* ./styles/**/* -c 'pnpm build'"
  },
  "author": "Nanai Jua <me@n7i.dev>",
  "license": "MIT",
  "packageManager": "pnpm@^7.2.1",
  "dependencies": {
    "tailwindcss": "^3.1.2"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "^2.1.0",
    "chokidar-cli": "^3.0.0",
    "del-cli": "^4.0.1",
    "esbuild": "^0.14.43",
    "eslint": "^8.17.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-pug": "^1.2.4",
    "eslint-plugin-yml": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "pug-cli": "1.0.0-alpha6"
  }
}
