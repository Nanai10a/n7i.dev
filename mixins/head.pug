mixin head(title)
  doctype html
  html(lang="en")
    head
      meta(charset="utf-8")
      meta(name="viewport" content="width=device-width")
      meta(name="colorscheme" content="dark light")

      if title
        title #{ title } - n7i.dev
      else
        title n7i.dev

      meta(name="description" content="site of nanai.")
      meta(name="author" content="Nanai Jua")

      link(href="https://fonts.googleapis.com" rel="preconnect")
      link(href="https://fonts.gstatic.com" rel="preconnect" crossorigin)
      link(
        href="https://fonts.googleapis.com/css2?family=Poiret+One&family=Zen+Kaku+Gothic+New&display=swap"
        rel="stylesheet"
      )

      link(rel="stylesheet" href="/main.css")
      link(rel="stylesheet" href=`/${reponame}/main.css`)

      script(src="https://code.iconify.design/2/2.2.1/iconify.min.js")

      script(src="https://twemoji.maxcdn.com/v/latest/twemoji.min.js")
      script
        | const opts = { folder: "svg", ext: ".svg", className: "h-[1.2em] w-[1.2em] mr-[.05em] ml-[.1em] align-[-.2em] inline" };
        | const callback = () => twemoji.parse(document.body, opts);
        | const listen = (fn) => document.addEventListener("DOMContentLoaded", fn);
        | document.readyState === "loading" ? listen(callback) : callback();

    body(
      class="min-h-screen bg-bgl dark:bg-bgd text-on-bgl dark:text-on-bgd font-zen text-xl md:text-2xl xl:text-3xl flex flex-col"
    )
      block
